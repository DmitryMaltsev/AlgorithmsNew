<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SilverAndroid.MainPage">

    <ContentPage.Resources>                                                                                      
        <Color x:Key="eColor">Red</Color>
        <Style TargetType="Label" x:Key="Target">
            <Setter Property="TextColor" Value="{StaticResource eColor}"/>
            <Setter Property="FontSize" Value="25"/>
        </Style>
    </ContentPage.Resources>
    <ScrollView>
        <VerticalStackLayout>
            <Label Style="{StaticResource Test}">Red Color</Label>
            <Label Style="{StaticResource Test2}">RC2</Label>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
