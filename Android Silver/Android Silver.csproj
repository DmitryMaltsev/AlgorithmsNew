<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net7.0-android;net7.0-ios;net7.0-maccatalyst</TargetFrameworks>
		<TargetFrameworks Condition="$([MSBuild]::IsOSPlatform('windows'))">$(TargetFrameworks);net7.0-windows10.0.19041.0</TargetFrameworks>
		<!-- Uncomment to also build the tizen app. You will need to install tizen by following this: https://github.com/Samsung/Tizen.NET -->
		<!-- <TargetFrameworks>$(TargetFrameworks);net7.0-tizen</TargetFrameworks> -->
		<OutputType>Exe</OutputType>
		<RootNamespace>Android_Silver</RootNamespace>
		<UseMaui>true</UseMaui>
		<SingleProject>true</SingleProject>
		<ImplicitUsings>enable</ImplicitUsings>

		<!-- Display name -->
		<ApplicationTitle>Android Silver</ApplicationTitle>

		<!-- App Identifier -->
		<ApplicationId>com.companyname.android_silver</ApplicationId>
		<ApplicationIdGuid>f418ee7e-2509-48c8-9890-2d2e23d1fbb0</ApplicationIdGuid>

		<!-- Versions -->
		<ApplicationDisplayVersion>1.0</ApplicationDisplayVersion>
		<ApplicationVersion>1</ApplicationVersion>

		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'ios'">11.0</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'maccatalyst'">13.1</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'android'">21.0</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'windows'">10.0.17763.0</SupportedOSPlatformVersion>
		<TargetPlatformMinVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'windows'">10.0.17763.0</TargetPlatformMinVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'tizen'">6.5</SupportedOSPlatformVersion>
	</PropertyGroup>

	<ItemGroup>
		<!-- App Icon -->
		<MauiIcon Include="Resources\AppIcon\appicon.svg" ForegroundFile="Resources\AppIcon\appiconfg.svg" Color="#512BD4" />

		<!-- Splash Screen -->
		<MauiSplashScreen Include="Resources\Splash\splash.svg" Color="#512BD4" BaseSize="128,128" />

		<!-- Images -->
		<MauiImage Include="Resources\Images\*" />
		<MauiImage Update="Resources\Images\dotnet_bot.svg" BaseSize="168,208" />

		<!-- Custom Fonts -->
		<MauiFont Include="Resources\Fonts\*" />

		<!-- Raw Assets (also remove the "Resources\Raw" prefix) -->
		<MauiAsset Include="Resources\Raw\**" LogicalName="%(RecursiveDir)%(Filename)%(Extension)" />
	</ItemGroup>

	<ItemGroup>
	  <AndroidResource Remove="Resources\Images\Pages\Modes\**" />
	  <Compile Remove="Resources\Images\Pages\Modes\**" />
	  <EmbeddedResource Remove="Resources\Images\Pages\Modes\**" />
	  <MauiCss Remove="Resources\Images\Pages\Modes\**" />
	  <MauiImage Remove="Resources\Images\Pages\Modes\**" />
	  <MauiXaml Remove="Resources\Images\Pages\Modes\**" />
	  <None Remove="Resources\Images\Pages\Modes\**" />
	</ItemGroup>

	<ItemGroup>
	  <None Remove="Resources\Images\Pages\background.png" />
	  <None Remove="Resources\Images\Pages\Modes_main\min.jpg" />
	  <None Remove="Resources\Images\Pages\Modes_main\minimum.jpg" />
	  <None Remove="Resources\Images\Pages\Modes_selected\kitchen_s.jpg" />
	  <None Remove="Resources\Images\Pages\Modes_selected\max_s.jpg" />
	  <None Remove="Resources\Images\Pages\Modes_selected\min_s.jpg" />
	  <None Remove="Resources\Images\Pages\Modes_selected\norm_s.jpg" />
	  <None Remove="Resources\Images\Pages\Modes_selected\shed_s.jpg" />
	  <None Remove="Resources\Images\Pages\Modes_selected\turn_off_s.jpg" />
	  <None Remove="Resources\Images\Pages\Modes_selected\vac_s.jpg" />
	  <None Remove="Resources\Images\Pages\settings.png" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="7.0.0" />
		<PackageReference Include="Unity" Version="5.11.10" />
	</ItemGroup>

	<ItemGroup>
	  <MauiXaml Update="Pages\ChooseModePage.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="Pages\IPPage.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="Pages\StartPage.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="Resources\Images\Icons\" />
	</ItemGroup>

	<ItemGroup>
	  <MauiImage Include="Resources\Images\Pages\background.png" />
	  <MauiImage Include="Resources\Images\Pages\Modes_main\min.jpg" />
	  <MauiImage Include="Resources\Images\Pages\Modes_selected\kitchen_s.jpg" />
	  <MauiImage Include="Resources\Images\Pages\Modes_selected\max_s.jpg" />
	  <MauiImage Include="Resources\Images\Pages\Modes_selected\min_s.jpg" />
	  <MauiImage Include="Resources\Images\Pages\Modes_selected\norm_s.jpg" />
	  <MauiImage Include="Resources\Images\Pages\Modes_selected\shed_s.jpg" />
	  <MauiImage Include="Resources\Images\Pages\Modes_selected\turn_off_s.jpg" />
	  <MauiImage Include="Resources\Images\Pages\Modes_selected\vac_s.jpg" />
	  <MauiImage Include="Resources\Images\Pages\qwe.jpg" />
	  <MauiImage Include="Resources\Images\Pages\settings.png" />
	</ItemGroup>

</Project>
