<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Android_Silver.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Android_Silver.Pages"
      WidthRequest="400" HeightRequest="800"
    Shell.FlyoutBehavior="Disabled"
    TabBarBackgroundColor="Black"
    TabBarTitleColor="Green"
    TabBarForegroundColor="Green"
    TabBarUnselectedColor ="White">

    <TabBar>
        <ShellContent Appearing="ShellContent_Appearing"
            Title="Настройки пользователя"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="mainPage"/>

        <ShellContent Appearing="ShellContent_Appearing_1"
        Title="Сервисные настройки"
        ContentTemplate="{DataTemplate local:ServicePage}"
        Route="servicePage"/>
    </TabBar>
    
</Shell>
