<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Android_Silver.Services"
             BackgroundImageSource="{Binding CPictureSet.Background}"
             Title="Главная страница"
             x:Class="Android_Silver.Pages.MainPage">

    <ContentPage.Resources>
        <local:InvertBoolConverter x:Key="InvertBoolConverter"/>
        <Style TargetType="Button">
            <!--<Setter Property="WidthRequest" Value="150"/>-->
            <Setter Property="Margin" Value="4,4,0,0"/>
            <Setter Property="TextColor" Value="White"/>
        </Style>
        <Style  TargetType="ImageButton">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="VerticalOptions" Value="Center" />
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="FontSize" Value="9"/>
            <Setter Property="Margin" Value="10,4"/>
            <Setter Property="TextColor" Value="White"/>
        </Style>
        <Style TargetType="Border">
            <Setter Property="Stroke" Value="Blue"/>
            <Setter Property="StrokeThickness" Value="4"/>
            <Setter Property="Padding" Value="5,5"/>
            <!--<Setter Property="WidthRequest" Value="180"/>-->
            <Setter Property="StrokeShape" Value="RoundRectangle 5,5,5,5"/>
        </Style>
        <Style TargetType="VerticalStackLayout">
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="VerticalOptions" Value="Center"/>
        </Style>
        <Style TargetType="Slider">
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="IsEnabled" Value="False"/>
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Maximum" Value="100"/>
        </Style>
        <Style TargetType="Label" x:Key="Title">
            <Setter Property="TextColor" Value="White" />
            <Setter Property="VerticalOptions" Value="Center" />
            <Setter Property="HorizontalOptions" Value="Center" />
            <Setter Property="FontSize" Value="19"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
        </Style>
        <Style TargetType="Label" x:Key="Journal">
            <Setter Property="TextColor" Value="White" />
            <Setter Property="HorizontalOptions" Value="Start" />
            <Setter Property="FontSize" Value="19"/>
            <Setter Property="Margin" Value="10,0,-10,0"/>
        </Style>
        <Style TargetType="ImageButton" x:Key="Updigit">
            <Setter Property="Margin" Value="0,10,0,-10"/>
            <Setter Property="Grid.Row" Value="6" />
            <Setter Property="BackgroundColor" Value="Transparent"/>
        </Style>
        <Style TargetType="ImageButton" x:Key="Dndigit">
            <Setter Property="Margin" Value="0,-10,0,10"/>
            <Setter Property="Grid.Row" Value="10" />
            <Setter Property="BackgroundColor" Value="Transparent"/>
        </Style>
        <!--#region Set points styple -->
        <Style TargetType="Label" x:Key="SPsTextL">
            <Setter Property="Margin" Value="10,0,-10,0"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
        </Style>
        <Style TargetType="Label" x:Key="SPsTextLC">
            <Setter Property="Margin" Value="20,0,-20,0"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
        </Style>
        <Style TargetType="Label" x:Key="SPsTextRC">
            <Setter Property="Margin" Value="-20,0,20,0"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
        </Style>
        <Style TargetType="Label" x:Key="SPsTextR">
            <Setter Property="Margin" Value="-10,0,10,0"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
        </Style>
        <!--#endregion-->
    </ContentPage.Resources>
    <Grid x:Name="mainPageGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.3*"/>
  
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--#region MAIN PAGE -->
        <!--Текущее время-->
        <Label Text="00:00" TextColor="White" FontSize="15" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" IsVisible="{Binding CActivePagesEntities.IsMainPage}"/>
        <!--Кнопка настроек-->
        <ImageButton  Source="{Binding CPictureSet.SettingsButton.Current}" Command="{Binding SettingsCommand}" 
                     Grid.Row="0"  Grid.RowSpan="1" Grid.Column="0"   Grid.ColumnSpan="9"  Pressed="Settings_Pressed"
                     Released="Settings_Released"  IsVisible="{Binding CActivePagesEntities.IsMainPage}"/>
        <!--Кнопка перехода в выбор режима-->
        <ImageButton x:Name="im2But" Source="{Binding  CModesEntities.CMode1.ActiveModePics.Current}" Command="{Binding ChooseModeCommand}"
                           Grid.Row="2"  Grid.RowSpan="3" Grid.Column="0"    Grid.ColumnSpan="9" Pressed="ActiveMode_Pressed" Released="ActiveMode_Released"
                             IsVisible="{Binding CActivePagesEntities.IsMainPage}"/>
        <!--Иконка режима 2-->
        <Image  Source="{Binding CModesEntities.CMode2.Mode2Icon}" 
                           Grid.Row="4"  Grid.RowSpan="1" Grid.Column="1"    Grid.ColumnSpan="1" Scale="0.7" HorizontalOptions="End" VerticalOptions="End" 
                 IsVisible="{Binding CActivePagesEntities.IsMainPage}"/>
        <!--Кнопка перехода в настройки текущего режима-->
        <ImageButton x:Name="im3But" Command="{Binding SPCommand}" Pressed="Substrate_Pressed" Released="Substrate_Released"
               Source="{Binding  CPictureSet.Substrate.Current}"  BorderWidth="0" Grid.Column="0" Grid.ColumnSpan="9"  Grid.Row="5"  Grid.RowSpan="3" 
               Aspect="Fill" Margin="5"  IsVisible="{Binding CActivePagesEntities.IsMainPage}"/>
        <!--Приточный воздух-->
        <Label Text="Приток"   Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"  IsVisible="{Binding CActivePagesEntities.IsMainPage}"/>
        <Slider   Grid.Row="5"  Grid.Column="2" Grid.ColumnSpan="6" Value="{Binding CModesEntities.CMode1.SypplySP}"  IsVisible="{Binding CActivePagesEntities.IsMainPage}"/>
        <Label Text="{Binding  CModesEntities.CMode1.SypplySP, StringFormat='{0}%',Mode=TwoWay}"   Grid.Row="5" Grid.Column="8"  IsVisible="{Binding CActivePagesEntities.IsMainPage}"/>
        <!--Вытяжной воздух-->
        <Label Text="Вытяжка"   Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"  IsVisible="{Binding CActivePagesEntities.IsMainPage}"/>
        <Slider  Grid.Row="6"  Grid.Column="2" Grid.ColumnSpan="6" Value="{Binding  CModesEntities.CMode1.ExhaustSP}"  IsVisible="{Binding CActivePagesEntities.IsMainPage}"/>
        <Label Text="{Binding  CModesEntities.CMode1.ExhaustSP, StringFormat='{0}%'}"   Grid.Row="6" Grid.Column="8"  IsVisible="{Binding CActivePagesEntities.IsMainPage}"/>
        <!--Температура-->
        <Label Text="t уст"   Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2"   IsVisible="{Binding CActivePagesEntities.IsMainPage}"/>
        <Slider  Grid.Row="7"  Grid.Column="2" Grid.ColumnSpan="6" Value="{Binding  CModesEntities.CMode1.TempSP}"  IsVisible="{Binding CActivePagesEntities.IsMainPage}"/>
        <Label Text="{Binding  CModesEntities.CMode1.TempSP, StringFormat='{0}°C'}"   Grid.Row="7" Grid.Column="8"  IsVisible="{Binding CActivePagesEntities.IsMainPage}"/>
        <!--Основная панель-->
        <HorizontalStackLayout Grid.Column="0" Grid.Row="9" Grid.ColumnSpan="9" Grid.RowSpan="1" HorizontalOptions="Center"  IsVisible="{Binding CActivePagesEntities.IsMainPage}">
            <Button Text="Подключиться" Command="{Binding ConnectCommand}" IsEnabled="{Binding EthernetEntities.IsConnected, Converter={StaticResource InvertBoolConverter}}"/>
            <Button Text="Отключиться" Command="{Binding DisconnectCommand}"  IsEnabled="{Binding EthernetEntities.IsConnected}"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout Grid.Column="0" Grid.Row="10" Grid.ColumnSpan="2"  IsVisible="{Binding CActivePagesEntities.IsMainPage}">
            <Label Text="{Binding EthernetEntities.SystemMessage}"/>
        </HorizontalStackLayout>
        <!--#endregion-->

        <!--#region CHOOSE MODE PAGE -->
        <ImageButton x:Name="ImBut1" Source="{Binding  CPictureSet.HomeButton.Current}" Grid.Row="0"  Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="9" 
               Command="{Binding HomeCommand}" Pressed="Home_Pressed" Released="Home_Released" IsVisible="{Binding CActivePagesEntities.IsChooseModePage}"/>
        <ImageButton x:Name="ImBut2" Source="{Binding  CPictureSet.SelectModesPics[1].Current}"    Grid.Row="2"  Grid.RowSpan="3" Grid.Column="0" Grid.ColumnSpan="3" 
               Command="{Binding MinModeCommand}"  Pressed="Min_Pressed" Released="Min_Released" IsVisible="{Binding CActivePagesEntities.IsChooseModePage}"/>
        <ImageButton x:Name="ImBut3" Source="{Binding  CPictureSet.SelectModesPics[2].Current}"    Grid.Row="2"  Grid.RowSpan="3" Grid.Column="3" Grid.ColumnSpan="3" 
               Command="{Binding NormalModeCommand}"  Pressed="Norm_Pressed" Released="Norm_Released" IsVisible="{Binding CActivePagesEntities.IsChooseModePage}"/>
        <ImageButton x:Name="ImBut4" Source="{Binding  CPictureSet.SelectModesPics[3].Current}"    Grid.Row="2"  Grid.RowSpan="3" Grid.Column="6" Grid.ColumnSpan="3" 
               Command="{Binding MaxModeCommand}"  Pressed="Max_Pressed" Released="Max_Released" IsVisible="{Binding CActivePagesEntities.IsChooseModePage}"/>
        <ImageButton x:Name="ImBut5" Source="{Binding  CPictureSet.SelectModesPics[4].Current}"    Grid.Row="5"  Grid.RowSpan="3" Grid.Column="0" Grid.ColumnSpan="3" 
               Command="{Binding KitchenModeCommand}"  Pressed="Kitchen_Pressed" Released="Kitchen_Released" IsVisible="{Binding CActivePagesEntities.IsChooseModePage}"/>
        <ImageButton x:Name="ImBut6" Source="{Binding  CPictureSet.SelectModesPics[5].Current}"    Grid.Row="5"  Grid.RowSpan="3" Grid.Column="3" Grid.ColumnSpan="3" 
               Command="{Binding VacationModeCommand}"  Pressed="Vac_Pressed" Released="Vac_Released" IsVisible="{Binding CActivePagesEntities.IsChooseModePage}"/>
        <ImageButton x:Name="ImBut7" Source="{Binding  CPictureSet.SelectModesPics[6].Current}"    Grid.Row="5"  Grid.RowSpan="3" Grid.Column="6" Grid.ColumnSpan="3" 
               Command="{Binding ShedulerModeCommand}"  Pressed="Shed_Pressed" Released="Shed_Released" IsVisible="{Binding CActivePagesEntities.IsChooseModePage}"/>
        <ImageButton x:Name="ImBut8"  Source="{Binding CPictureSet.SelectModesPics[0].Current}" Grid.Row="8"  Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="9"  
               Command="{Binding TurnOffModeCommand}"  Pressed="TurnOff_Pressed" Released="TurnOff_Released" IsVisible="{Binding CActivePagesEntities.IsChooseModePage}"/>
        <!--#endregion-->

        <!--#region LOADING PAGE -->
        <Image Source="{Binding  CPictureSet.LoadingPic}" IsVisible="{Binding CActivePagesEntities.IsLoadingPage}" 
                                                        Grid.Row="3"  Grid.RowSpan="6" Grid.Column="0" Grid.ColumnSpan="9"/>
        <!--#endregion-->

        <!--#region KITCHEN TIMER PAGE -->
        <ImageButton Source="{Binding CPictureSet.HomeButton.Current}" Command="{Binding HomeCommand}" Pressed="HomeButton_Pressed" Released="HomeButton_Released"
                     Grid.Row="0"  Grid.RowSpan="1" Grid.Column="0"   Grid.ColumnSpan="9"    IsVisible="{Binding CActivePagesEntities.IsKitchenTimerPage}" />
        <Label Text="Взвод таймера"  Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="9" Style="{StaticResource Title}" 
                                                                                               IsVisible="{Binding CActivePagesEntities.IsKitchenTimerPage}"/>
        <!--#region 1 колонка -->
        <Image Source="{Binding CPictureSet.DigitalImage}" Grid.Row="3" Grid.RowSpan="6"  Grid.Column="1" Grid.ColumnSpan="3"
                                                                                IsVisible="{Binding CActivePagesEntities.IsKitchenTimerPage}"/>
        <ImageButton Command="{Binding UpMInutesCommand}" Source="{Binding  CPictureSet.KitchenButtonUp.Current}" Style="{StaticResource Updigit}"
                      Grid.Column="1" Grid.ColumnSpan="3"  Grid.Row="3" Grid.RowSpan="2" Pressed="UpDigit_Pressed" Released="UpDigit_Released"
                      IsVisible="{Binding CActivePagesEntities.IsKitchenTimerPage}"/>
        <Label  Grid.Row="5"  Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding CModesEntities.Mode2ValuesList[1].TimeModeValues[0].Minute}"  
                                                                            Style="{StaticResource Title}"   IsVisible="{Binding CActivePagesEntities.IsKitchenTimerPage}"/>
        <Label  Grid.Row="6"  Grid.Column="1" Grid.ColumnSpan="3" Text="Мин." Style="{StaticResource Title}" IsVisible="{Binding CActivePagesEntities.IsKitchenTimerPage}"/>
        <ImageButton  Grid.Column="1" Grid.ColumnSpan="3"    Grid.Row="7" Grid.RowSpan="2" Command="{Binding DnMinutesCommand}" Source="{Binding  CPictureSet.KitchenButtonDn.Current}" 
                      Style="{StaticResource Dndigit}" Pressed="DnDigit_Pressed" Released="DnDigit_Released"  IsVisible="{Binding CActivePagesEntities.IsKitchenTimerPage}"/>
        <!--#endregion-->
        <ImageButton  Grid.Row="4" Grid.RowSpan="2" Grid.Column="4" Grid.ColumnSpan="5"  Source="{Binding CPictureSet.AcceptButton.Current}" Command="{Binding KitchenOkCommand}" 
                      Pressed="AcceptButton_Pressed" Released="AcceptButton_Released"  IsVisible="{Binding CActivePagesEntities.IsKitchenTimerPage}"/>
        <ImageButton  Grid.Row="6" Grid.RowSpan="2" Grid.Column="4" Grid.ColumnSpan="5" Source="{Binding CPictureSet.CancelButton.Current}" Command="{Binding KitchenCancelCommand}"
                      Pressed="CancelButton_Pressed" Released="CancelButton_Released"  IsVisible="{Binding CActivePagesEntities.IsKitchenTimerPage}"/>
        <!--#endregion-->

        <!--#region SETPOINTS PAGE -->
        <ImageButton  Grid.Row="0"  Grid.RowSpan="1" Grid.Column="0"   Grid.ColumnSpan="9" Source="{Binding CPictureSet.HomeButton.Current}" 
                      Command="{Binding HomeCommand}" Pressed="HomeButton_SPPressed" Released="HomeButton_SPReleased"  
                      IsVisible = "{Binding  CActivePagesEntities.IsSetPointsPage}"/>
        <!--#region Заголовок -->
        <Image Source="{Binding M1Values.MiniIcon}"  Grid.Row="2"  Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1"
                                                       IsVisible = "{Binding   CActivePagesEntities.IsSetPointsPage}"/>

        <Image Source="{Binding CPictureSet.Title}"  Grid.Row="2"  Grid.RowSpan="1" Grid.Column="2" Grid.ColumnSpan="4"    
                                                            IsVisible = "{Binding   CActivePagesEntities.IsSetPointsPage}"/>
        <Label Text="{Binding  M1Values.Title}"  Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="4" Style="{StaticResource Title}"
                                                                     IsVisible = "{Binding   CActivePagesEntities.IsSetPointsPage}"/>
        <ImageButton  Grid.Row="2" Grid.RowSpan="1"  Grid.Column="7" Grid.ColumnSpan="1" Margin="0,0,0,0"  
                      Source="{Binding CPictureSet.NextButton.Current}" 
                      Command="{Binding NextSetPointsCommand}" Pressed="Next_Pressed" Released="Next_Released"
                      IsVisible = "{Binding   CActivePagesEntities.IsSetPointsPage}"/>
        <!--#endregion-->
        <!--#region 1 колонка Binding  M1Values.SypplySP-->
        <Label Text="Приток"  Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"  Style="{StaticResource SPsTextL}" 
                                                                            IsVisible = "{Binding  CActivePagesEntities.IsSetPointsPage}"/>
        <Image Source="{Binding CPictureSet.DigitalImage}" Grid.Row="4" Grid.RowSpan="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="10,0,-10,0"
                                                                      IsVisible = "{Binding   CActivePagesEntities.IsSetPointsPage}"/>
        <ImageButton Command="{Binding BtnUpCommand0}" Source="{Binding  CPictureSet.DigitalButtonsUp[0].Current}" 
                     Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4" Grid.RowSpan="1" Margin="10,0,-10,0"
                     Pressed="UpDigit_Pressed0" Released="UpDigit_Released0" Style="{StaticResource Updigit}" 
                                            IsVisible = "{Binding   CActivePagesEntities.IsSetPointsPage}"/>
        <Label Text="{Binding  M1Values.SypplySP}"  Grid.Column="0" Grid.ColumnSpan="2"  Grid.Row="5"  Style="{StaticResource SPsTextL}"
                                                IsVisible = "{Binding   CActivePagesEntities.IsSetPointsPage}"/>
        <Label Text="%" Grid.Column="0" Grid.ColumnSpan="2"  Grid.Row="6"  Style="{StaticResource SPsTextL}"
                                                    IsVisible = "{Binding  CActivePagesEntities.IsSetPointsPage}"/>
        <ImageButton Command="{Binding BtnDnCommand0}" Source="{Binding  CPictureSet.DigitalButtonsDn[0].Current}" 
                      Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="7" Grid.RowSpan="1" Margin="10,0,-10,0"
                     Pressed="DnDigit_Pressed0" Released="DnDigit_Released0"
                                                    IsVisible = "{Binding  CActivePagesEntities.IsSetPointsPage}"/>
        <!--#endregion-->
        <!--#region 2 колонка-->
        <Label Text="Вытяжка" Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" Style="{StaticResource SPsTextLC}"
                                                        IsVisible = "{Binding   CActivePagesEntities.IsSetPointsPage}"/>
        <Image Source="{Binding CPictureSet.DigitalImage}" Grid.Row="4" Grid.RowSpan="4" Grid.Column="2" Grid.ColumnSpan="2" Margin="20,0,-20,0"
                                                         IsVisible = "{Binding   CActivePagesEntities.IsSetPointsPage}"/>
        <ImageButton Command="{Binding BtnUpCommand1}"  Source="{Binding  CPictureSet.DigitalButtonsUp[1].Current}" 
                       Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="4" Grid.RowSpan="1" Margin="20,0,-20,0"
                                                       Pressed="UpDigit_Pressed1" Released="UpDigit_Released1"
                                                            IsVisible = "{Binding   CActivePagesEntities.IsSetPointsPage}"/>
        <Label Text="{Binding  M1Values.ExhaustSP}" Grid.Row="5"  Grid.Column="2" Grid.ColumnSpan="2"  Style="{StaticResource SPsTextLC}"
                                                                IsVisible = "{Binding   CActivePagesEntities.IsSetPointsPage}"/>
        <Label Text="%"  Grid.Row="6"  Grid.Column="2" Grid.ColumnSpan="2" Style="{StaticResource SPsTextLC}"
                                                                    IsVisible = "{Binding   CActivePagesEntities.IsSetPointsPage}"/>
        <ImageButton Command="{Binding BtnDnCommand1}" Source="{Binding  CPictureSet.DigitalButtonsDn[1].Current}"  
                        Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="7" Grid.RowSpan="1" Margin="20,0,-20,0"
                                                                     Pressed="DnDigit_Pressed1" Released="DnDigit_Released1"
                                                                     IsVisible = "{Binding   CActivePagesEntities.IsSetPointsPage}"/>
        <!--#endregion-->
        <!--#region 3 колонка -->
        <Label Text="t° воздуха"  Grid.Row="3" Grid.Column="5" Grid.ColumnSpan="2" Style="{StaticResource SPsTextRC}"
                                                                                    IsVisible = "{Binding   CActivePagesEntities.IsSetPointsPage}"/>
        <Image Source="{Binding CPictureSet.DigitalImage}"  Grid.Row="4" Grid.RowSpan="4" Grid.Column="5" Grid.ColumnSpan="2" Margin="-20,0,20,0"
                                                                                        IsVisible = "{Binding   CActivePagesEntities.IsSetPointsPage}"/>
        <ImageButton Command="{Binding BtnUpCommand2}" Source="{Binding  CPictureSet.DigitalButtonsUp[2].Current}"
                      Grid.Column="5" Grid.ColumnSpan="2" Grid.Row="4" Grid.RowSpan="1" Margin="-20,0,20,0"
                     Pressed="UpDigit_Pressed2" Released="UpDigit_Released2"
                                                                       IsVisible = "{Binding   CActivePagesEntities.IsSetPointsPage}"/>
        <Label Text="{Binding M1Values.TempSP}"  Grid.Row="5"  Grid.Column="5" Grid.ColumnSpan="2"  Style="{StaticResource SPsTextRC}"
                                                                    IsVisible = "{Binding   CActivePagesEntities.IsSetPointsPage}"/>
        <Label Text="°С"  Grid.Row="6"  Grid.Column="5" Grid.ColumnSpan="2" Style="{StaticResource SPsTextRC}" 
                                                                    IsVisible = "{Binding   CActivePagesEntities.IsSetPointsPage}"/>
        <ImageButton Command="{Binding BtnDnCommand2}" Source="{Binding  CPictureSet.DigitalButtonsDn[2].Current}"
                      Grid.Column="5" Grid.ColumnSpan="2" Grid.Row="7" Grid.RowSpan="1" Margin="-20,0,20,0"
                     Pressed="DnDigit_Pressed2" Released="DnDigit_Released2"
                                                                     IsVisible = "{Binding   CActivePagesEntities.IsSetPointsPage}"/>
        <!--#endregion-->
        <!--#region 4 колонка -->
        <Label Text="Нагрев-ль"  Grid.Row="3" Grid.Column="7" Grid.ColumnSpan="2" Style="{StaticResource SPsTextR}"
                                                                      IsVisible = "{Binding   CActivePagesEntities.IsSetPointsPage}"/>
        <Image Grid.Row="4" Grid.RowSpan="4" Grid.Column="7" Grid.ColumnSpan="2" Source="{Binding CPictureSet.DigitalImage}"  Margin="-10,0,10,0"
                                                                                   IsVisible = "{Binding CActivePagesEntities.IsSetPointsPage}"/>
        <ImageButton Command="{Binding BtnUpCommand3}" Source="{Binding  CPictureSet.DigitalButtonsUp[3].Current}"
                                                     Grid.Column="7" Grid.ColumnSpan="2" Grid.Row="4" Grid.RowSpan="1" Margin="-10,0,10,0"
                                                                                   Pressed="UpDigit_Pressed3" Released="UpDigit_Released3"
                                                                          IsVisible = "{Binding   CActivePagesEntities.IsSetPointsPage}"/>
        <Label Grid.Row="5"  Grid.Column="7" Grid.ColumnSpan="2" Text="{Binding M1Values.PowerLimitSP}"  Style="{StaticResource SPsTextR}"
                                                                         IsVisible = "{Binding   CActivePagesEntities.IsSetPointsPage}"/>
        <Label Text="%"  Grid.Row="6"  Grid.Column="7" Grid.ColumnSpan="2" Style="{StaticResource SPsTextR}" 
                                                                         IsVisible = "{Binding   CActivePagesEntities.IsSetPointsPage}"/>
        <ImageButton  Grid.Column="7" Grid.ColumnSpan="2" Grid.Row="7" Grid.RowSpan="1" Margin="-10,0,10,0"
                                             Command="{Binding BtnDnCommand3}" Source="{Binding  CPictureSet.DigitalButtonsDn[3].Current}" 
                                                                              Pressed="DnDigit_Pressed3" Released="DnDigit_Released3"
                                                                         IsVisible = "{Binding   CActivePagesEntities.IsSetPointsPage}"/>
        <!--#endregion-->
        <ImageButton Source="{Binding CPictureSet.OkButton.Current}" Command="{Binding SPOkCommand}" Grid.Row="9" Grid.RowSpan="1" Grid.Column="3" Grid.ColumnSpan="3"
                       Pressed="OK_SPPressed" Released="Ok_SPReleased" IsVisible = "{Binding   CActivePagesEntities.IsSetPointsPage}"/>
        <!--#endregion-->

        <!--#region SETTINGS PAGE -->
        <ImageButton  Source="{Binding  CPictureSet.HomeButton.Current}" Grid.Row="0"  Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="9" 
          Command="{Binding HomeCommand}" Pressed="Home_Pressed" Released="Home_Released" IsVisible="{Binding CActivePagesEntities.IsSettingsPage}"/>
        <!--#region Верхний уровень -->

        <ImageButton  Source="{Binding  CPictureSet.JournalBut.Current}"    Grid.Row="2"  Grid.RowSpan="3" Grid.Column="0" Grid.ColumnSpan="4" 
         Command="{Binding JournalCommand}"  Pressed="Journal_Pressed" Released="Journal_Released" IsVisible="{Binding CActivePagesEntities.IsSettingsPage}"/>
        <ImageButton  Source="{Binding  CPictureSet.SettingsOtherBut.Current}"    Grid.Row="2"  Grid.RowSpan="3" Grid.Column="5" Grid.ColumnSpan="4" 
         Command="{Binding MaxModeCommand}"  Pressed="OtherSettings_Pressed" Released="OtherSettings_Released" 
                                                                                           IsVisible="{Binding CActivePagesEntities.IsSettingsPage}"/>
        <!--#endregion-->
        <!--#region Середина -->
        <ImageButton  Source="{Binding  CPictureSet.ModesSetBut.Current}"    Grid.Row="4"  Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="9" 
            Command="{Binding SPCommand}"  Pressed="SPSettings_Pressed" Released="SPSettings_Released" IsVisible="{Binding CActivePagesEntities.IsSettingsPage}"/>
        <!--#endregion-->
        <!--#region Нижний уровень -->
        <ImageButton  Source="{Binding  CPictureSet.VacSetBut.Current}"    Grid.Row="5"  Grid.RowSpan="3" Grid.Column="0" Grid.ColumnSpan="4" 
         Command="{Binding KitchenModeCommand}"  Pressed="VacSettings_Pressed" Released="VacSettings_Released" IsVisible="{Binding CActivePagesEntities.IsSettingsPage}"/>
        <ImageButton Source="{Binding  CPictureSet.ShedSetBut.Current}"    Grid.Row="5"  Grid.RowSpan="3" Grid.Column="5" Grid.ColumnSpan="4" 
         Pressed="ShedSettings_Pressed" Released="ShedSettings_Released" IsVisible="{Binding CActivePagesEntities.IsSettingsPage}"/>
        <!--#endregion-->
        <!--#endregion-->

        <!--#region JOURNAL PAGE -->
        <ImageButton  Source="{Binding  CPictureSet.BackButton.Current}" Grid.Column="0" Grid.ColumnSpan="1" Grid.Row="0"  Grid.RowSpan="1"
             HeightRequest="30"  WidthRequest="30"    IsVisible="{Binding CActivePagesEntities.IsJournalPage}"/>
        <ImageButton Source="{Binding  CPictureSet.HomeButton.Current}" Grid.Row="0"  Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="9" HeightRequest="50"  
         Command="{Binding HomeCommand}" Pressed="Home_Pressed" Released="Home_Released" IsVisible="{Binding CActivePagesEntities.IsJournalPage}"/>
        <Label  Grid.ColumnSpan="9"  Grid.Row="2" Text="Журнал неисправностей 1 из 1" Style="{StaticResource Title}"  IsVisible="{Binding CActivePagesEntities.IsJournalPage}" />
