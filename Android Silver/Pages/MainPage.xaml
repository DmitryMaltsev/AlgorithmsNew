<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Android_Silver.Services"
             BackgroundImageSource="background.png"
             x:Class="Android_Silver.Pages.MainPage">

    <ContentPage.Resources>
        <local:InvertBoolConverter x:Key="InvertBoolConverter"/>
        <Style TargetType="{Type Button}">
            <!--<Setter Property="WidthRequest" Value="150"/>-->
            <Setter Property="Margin" Value="4,4,0,0"/>
            <Setter Property="TextColor" Value="White"/>
        </Style>
        <Style TargetType="{Type Label}">
            <Setter Property="HorizontalOptions" Value="Start"/>
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="10,4"/>
        </Style>
        <Style TargetType="{Type Border}">
            <Setter Property="Stroke" Value="Blue"/>
            <Setter Property="StrokeThickness" Value="4"/>
            <Setter Property="Padding" Value="5,5"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="VerticalOptions" Value="Center"/>
            <!--<Setter Property="WidthRequest" Value="180"/>-->
            <Setter Property="StrokeShape" Value="RoundRectangle 5,5,5,5"/>
        </Style>
        <Style TargetType="{Type VerticalStackLayout}">
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="VerticalOptions" Value="Center"/>
        </Style>
    </ContentPage.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*" />
            <RowDefinition Height="0.3*" />
            <RowDefinition Height="0.3*" />
            <RowDefinition Height="0.3*" />
            <RowDefinition Height="0.3*" />
            <RowDefinition Height="0.3*" />
            <RowDefinition Height="0.3*" />
            <RowDefinition Height="0.3*" />
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!--Текущее время-->
        <HorizontalStackLayout Grid.Column="0" Grid.Row="0">
            <Label Text="00:00" TextColor="White" FontSize="15"/>
        </HorizontalStackLayout>
        <!--Кнопка настроек-->
        <HorizontalStackLayout Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0" HorizontalOptions="Center">
            <Image Source="settings.png" BackgroundColor="Transparent"/>
        </HorizontalStackLayout>

        <!--Кнопка перехода в выбор режима-->
        <HorizontalStackLayout Grid.Column="0" Grid.ColumnSpan="4"  Grid.Row="2" Grid.RowSpan="2" HorizontalOptions="Center"
                               VerticalOptions="Center">
            <ImageButton WidthRequest="100" HeightRequest="100" Source="{Binding CModesEntities.CMode1Pic}" Command="{Binding ChooseModeCommand}"/>
        </HorizontalStackLayout>
        <!--Кнопка перехода в настройки текущего режима режима-->
        <Button Text="SetttingsButton"  Command="{Binding SettingsCommand}" BackgroundColor="Transparent" BorderColor="AliceBlue"
                 BorderWidth="3" Margin="5"  Grid.Row="5"  Grid.RowSpan="3" Grid.Column="0" Grid.ColumnSpan="4" />

        <!--Кнопка перехода в настройку режима-->
        <Label Text="Приточный вохдух"   Grid.Row="5" Grid.Column="0"/>
        <Slider   Grid.Row="5"  Grid.Column="1" Grid.ColumnSpan="2" Value="{Binding Value}" Maximum="100" Minimum="0" ThumbColor="Red" IsEnabled="False"/>
        <Label Text="зн"   Grid.Row="5" Grid.Column="4"/>
        <!--Кнопка перехода в настройку режима-->
        <Label Text="Выт вохдух"   Grid.Row="6" Grid.Column="0"/>
        <Slider  Grid.Row="6"  Grid.Column="1" Grid.ColumnSpan="2"  IsEnabled="False" ThumbColor="DarkGreen"/>
        <Label Text="зн"   Grid.Row="6" Grid.Column="4"/>
        <Label Text="Выт воздух"   Grid.Row="7" Grid.Column="0" />
        <Slider  Grid.Row="7"  Grid.Column="1" Grid.ColumnSpan="2" IsEnabled="False" ThumbColor="DarkGreen"/>
        <Label Text="зн"   Grid.Row="7" Grid.Column="7"/>
        
        <!--Основная панель-->
        <HorizontalStackLayout Grid.Column="0" Grid.Row="8" Grid.ColumnSpan="4" Grid.RowSpan="1" HorizontalOptions="Center">
            <Button Text="Подключиться" Command="{Binding ConnectCommand}"  
                    IsEnabled="{Binding EthernetEntities.IsConnected, Converter={StaticResource InvertBoolConverter}}"/>
            <Button Text="Отключиться" Command="{Binding DisconnectCommand}"
                     IsEnabled="{Binding EthernetEntities.IsConnected}"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout Grid.Column="0" Grid.Row="9" Grid.ColumnSpan="2">
            <Label Text="{Binding EthernetEntities.SystemMessage}" />
        </HorizontalStackLayout>
    </Grid>
</ContentPage>
