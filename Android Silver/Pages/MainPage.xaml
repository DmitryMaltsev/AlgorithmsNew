<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Android_Silver.Services"
             BackgroundImageSource="background.png"
             Title="Главная страница"
             x:Class="Android_Silver.Pages.MainPage">

    <ContentPage.Resources>
        <local:InvertBoolConverter x:Key="InvertBoolConverter"/>
        <Style TargetType="{Type Button}">
            <!--<Setter Property="WidthRequest" Value="150"/>-->
            <Setter Property="Margin" Value="4,4,0,0"/>
            <Setter Property="TextColor" Value="White"/>
        </Style>
        <Style  TargetType="{Type ImageButton}">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="VerticalOptions" Value="Center" />
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
        <Style TargetType="{Type Label}">
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="FontSize" Value="9"/>
            <Setter Property="Margin" Value="10,4"/>
            <Setter Property="TextColor" Value="White"/>
        </Style>
        <Style TargetType="{Type Border}">
            <Setter Property="Stroke" Value="Blue"/>
            <Setter Property="StrokeThickness" Value="4"/>
            <Setter Property="Padding" Value="5,5"/>
            <!--<Setter Property="WidthRequest" Value="180"/>-->
            <Setter Property="StrokeShape" Value="RoundRectangle 5,5,5,5"/>
        </Style>
        <Style TargetType="{Type VerticalStackLayout}">
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="VerticalOptions" Value="Center"/>
        </Style>
        <Style TargetType="{Type Slider}">
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="IsEnabled" Value="False"/>
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Maximum" Value="100"/>
        </Style>
    </ContentPage.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.03*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--Текущее время-->
        <Label Text="00:00" TextColor="White" FontSize="15" Grid.Column="0" Grid.Row="0"/>
        <!--Кнопка настроек-->
        <ImageButton Source="settings.png" Command="{Binding SettingsCommand}" 
                     Grid.Row="0"  Grid.RowSpan="1" Grid.Column="0"   Grid.ColumnSpan="6"/>
        <!--Кнопка перехода в выбор режима-->
        <ImageButton  Source="{Binding CModesEntities.CMode1Pic}" Command="{Binding ChooseModeCommand}"
                           Grid.Row="2"  Grid.RowSpan="3" Grid.Column="0"    Grid.ColumnSpan="6" />
        <!--Кнопка перехода в настройки текущего режима режима-->
        <ImageButton  Command="{Binding SetSettingsCommand}" BackgroundColor="Transparent" BorderColor="AliceBlue"
               Source="substrate.png"  BorderWidth="0" Grid.Column="0" Grid.ColumnSpan="6"  Grid.Row="6"  Grid.RowSpan="3" 
               Aspect="Fill" Margin="5"/>
        <!--Приточный воздух-->
        <Label Text="Приток"   Grid.Row="6" Grid.Column="0" />
        <Slider   Grid.Row="6"  Grid.Column="1" Grid.ColumnSpan="4" Value="{Binding CModesEntities.CMode1.SypplySP}"/>
        <Label Text="{Binding  CModesEntities.CMode1.SypplySP, StringFormat='{0} %',Mode=TwoWay}"   Grid.Row="6" Grid.Column="6"/>
        <!--Вытяжной воздух-->
        <Label Text="Вытяжка"   Grid.Row="7" Grid.Column="0"/>
        <Slider  Grid.Row="7"  Grid.Column="1" Grid.ColumnSpan="4" Value="{Binding  CModesEntities.CMode1.ExhaustSP}"/>
        <Label Text="{Binding  CModesEntities.CMode1.ExhaustSP, StringFormat='{0} %'}"   Grid.Row="7" Grid.Column="6"/>
        <!--Температура -->
        <Label Text="t уст"   Grid.Row="8" Grid.Column="0" />
        <Slider  Grid.Row="8"  Grid.Column="1" Grid.ColumnSpan="4" Value="{Binding  CModesEntities.CMode1.TempSP}"/>
        <Label Text="{Binding  CModesEntities.CMode1.TempSP, StringFormat='{0} C°'}"   Grid.Row="8" Grid.Column="6"/>
        <!--Основная панель-->
        <HorizontalStackLayout Grid.Column="0" Grid.Row="9" Grid.ColumnSpan="6" Grid.RowSpan="1" HorizontalOptions="Center">
            <Button Text="Подключиться" Command="{Binding ConnectCommand}"  
                    IsEnabled="{Binding EthernetEntities.IsConnected, Converter={StaticResource InvertBoolConverter}}"/>
            <Button Text="Отключиться" Command="{Binding DisconnectCommand}"
                     IsEnabled="{Binding EthernetEntities.IsConnected}"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout Grid.Column="0" Grid.Row="10" Grid.ColumnSpan="2">
            <Label Text="{Binding EthernetEntities.SystemMessage}" />
        </HorizontalStackLayout>
    </Grid>
</ContentPage>